@model CreatePageDTO
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-sm-8">
        <div class="card-header">
            <h5 class="card-title">Create Page</h5>
        </div>
        <form asp-action="Create">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Title</label>
                    <input  class="form-control" placeholder="Title" asp-for="Title"/>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                    <div class="form-group">
                    <label asp-for="Content">Content</label>
                    <input class="form-control" placeholder="Content" asp-for="Content"/>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Create Page" class="btn btn-outline-success btn-sm float-right" />
                        <a asp-action="List" class="btn btn-outline-info btn-sm float-left">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>