@model UpdatePageDTO
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Update Page</h5>
            </div>
            <form asp-action="Edit">
                <div class="card-body">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id" />
                        @*<span asp-validation-summary="ModelOnly" class="text-danger"></span>*@
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" class="form-control" placeholder="Page Title" value="@Model.Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="Content">Content</label>
Content<input asp-for="Content" class="form-control" placeholder="Page Content" value="@Model.Title" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Update Page" class="btn btn-outline-success btn-sm float-right" />
                            <a asp-action="List" class="btn btn-outline-info btn-sm float-left">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}