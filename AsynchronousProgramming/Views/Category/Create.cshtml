@model CreateCategoryDTO
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Create Category</h5>
            </div>
            <form asp-action="Create">
                <div class="card-body">
                    <div class="form-group">
                        <span asp-validation-summary="ModelOnly" class="text-danger"></span>
                        <span asp-validation-summary="All" class="text-danger"></span>
                        <label asp-for="Name">Title</label>
                        <input asp-for="Name" class="form-control" placeholder="Category Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Create Category" class="btn btn-outline-success btn-sm float-right" />
                            <a asp-action="List" class="btn btn-outline-info btn-sm float-left">Back to List</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>